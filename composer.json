{
  "name": "trademachines/riemann-logging-bundle",
  "description": "A Symfony bundle for logging several information to riemann",
  "minimum-stability": "stable",
  "type": "symfony-bundle",
  "license": "MIT",
  "require": {
    "php": ">=5.5",
    "symfony/dependency-injection": "~2.3|~3.0",
    "symfony/http-kernel": "~2.3|~3.0",
    "symfony/config": "~2.3|~3.0",
    "symfony/yaml": "~2.3|~3.0",
    "symfony/stopwatch": "~2.3|~3.0",
    "trademachines/riemann-client-php": "~1.0",
    "psr/log": "1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.8",
    "symfony/monolog-bundle": "~2.4"
  },
  "suggest": {
    "symfony/monolog-bundle": "When using the monolog bundle the logging bundle sends additional metrics to riemann"
  },
  "autoload": {
    "psr-4": {
      "Trademachines\\Bundle\\RiemannLoggingBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Trademachines\\Bundle\\RiemannLoggingBundle\\Tests\\": "tests/"
    }
  }
}
